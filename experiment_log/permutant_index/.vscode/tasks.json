{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build generator",
            "type": "shell",
            "command": "gcc-6",
            "args": [
                "-o","generate_dataset.out",
                "-g","generate_dataset.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "build index",
            "type": "shell",
            "command": "gcc-6",
            "args": [
                "-o","index.out",
                "-g","index.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}